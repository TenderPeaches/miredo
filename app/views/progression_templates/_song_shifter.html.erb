<%= tag.div class: "song-shifter" do %>
    <% if previous_song = song.previous %>
        <%= link_to "<", song_progression_templates_path(previous_song), title: previous_song.label_with_artist %>
    <% end %>
    <%= tag.h1 song.name %>
    <% if next_song = song.next %>
        <%= link_to ">", song_progression_templates_path(next_song), title: next_song.label_with_artist %>
    <% end %>
<% end %>