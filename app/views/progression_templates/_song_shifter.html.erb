<%= tag.div class: "song-shifter" do %>
    <% if song.id > 1 %>
        <%= link_to "<", song_progressions_path(song.id - 1), title: Song.find(song.id - 1).label_with_artist %>
    <% end %>
    <%= tag.h1 song.name %>
    <% if song.id < Song.last.id %>
        <%= link_to ">", song_progressions_path(song.id + 1), title: Song.find(song.id + 1).label_with_artist %>
    <% end %>
<% end %>