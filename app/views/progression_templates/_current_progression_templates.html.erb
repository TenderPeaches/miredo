<%= tag.div id: "current-progression-templates", class: "card current-progression-templates" do %>
    <% if progression_templates.count > 0 %>
        <% progression_templates.each_with_index do |progression_template, i| %>
            <%= tag.fieldset id: dom_id(progression_template) do %>
                <%= tag.legend "#{(i + 1).to_s}) #{progression_template.tag}" %>
                <%= render "progression_templates/form", progression_template: progression_template %>    
            <% end %>   
        <% end %>
    <% else %>
        <%= tag.div t('content.songs.no_progression_template'), id: "no-progression-templates" %>
    <% end %>
<% end %>