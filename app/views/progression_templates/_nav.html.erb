<%= tag.nav do %>
    <%# "new progression templates" button %>
    <%= link_to t('actions.new', thing: t('activerecord.models.progression_template')), new_progression_template_path(song_id: song.id.to_s), data: { turbo_stream: true }, title: t('instructions.new_progression_template') %>
    <%# "edit song" button %>
    <%= link_to t('actions.edit', thing: t('activerecord.models.song')), edit_song_path(song) %>
    <%# "define song progressions" button %>
    <%= link_to t('cta.edit_song_structure'), song_progressions_path(song), title: t('instructions.edit_song_structure') %>
    <%# "view song" button %>
    <%= link_to t('cta.view_song'), song_path(song) %>
<% end %>