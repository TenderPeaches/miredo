<%= tag.h2 t('cta.log_in') %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>

    <%# user email %>
    <%= tag.div class: "field" do %>
        <%= form.label :email %>
        <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
    <% end %>

    <%# password %>
    <%= tag.div class: "field" do %>
        <%= form.label :password %>
        <%= form.password_field :password, autocomplete: "current-password" %>
    <% end %>

    <%# "remember me?" checkbox %>
    <% if devise_mapping.rememberable? %>
        <%= tag.div class: "checkbox-field" do %>
            <%= form.check_box :remember_me %>
            <%= form.label :remember_me %>
        <% end %>
    <% end %>

    <%= tag.div class: "actions" do %>
        <%= form.submit t('cta.log_in') %>
        <%= link_to t('cta.sign_up'), new_registration_path(resource_name), class: "button" %>
    <% end %>

    <%= tag.div class: "actions" do %>
        <%= link_to t('cta.forgot_password'), new_password_path(resource_name), class: "button" %>
        <%= link_to t('cta.resend_confirmation'), new_confirmation_path(resource_name), class: "button" %>
    <% end %>
<% end %>

