<% modifier ||= 0 %>
<%= tag.table class: "scale-chords" do %>
    <% scale.get_degree_chords(key, modifier).each_with_index do |chord, i| %>
        <%= tag.tr do %>
            <%= tag.th do %>
                <%= chord[:degree] %>
            <% end %>
            <%= tag.td class: "degree-#{i + 1}" do %>
                <%= chord[:print] %>
            <% end %>
        <% end %>
    <% end %>
<% end %>