<%# as the song progression has been created, remove it from the list of new song progressions %>
<%= turbo_stream.remove "new-song-progression_#{@song_progression.uid}" %>

<%# append the song progression to the list of (created) song progressions %>
<%= turbo_stream.append "current-song-progressions" do %>
    <%= tag.fieldset id: dom_id(@song_progression) do %>
        <%= tag.legend "#{@song_progression_index.to_s}) #{@song_progression.tag}" %>
        <%= render "song_progressions/form", song_progression: @song_progression, song: @song %>    
    <% end %>   
<% end %>