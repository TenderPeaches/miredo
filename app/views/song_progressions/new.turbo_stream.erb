<%# append the form for this new song progression to the list of new song progressions %>
<%= turbo_stream.append "new-song-progressions" do %>
    <%# use random unique identifier to easily pluck this element without needing to rely on the song_progression's DB ID, which is not assigned yet (as a new but unsaved song_progression) %>
    <% uid = Time.now.to_i %>
    <%= tag.fieldset id: "new-song-progression_#{uid}" do %>
        <%= tag.legend t('actions.new', thing: t('models.song_progression.model_name')) %>
        <%= render "song_progressions/form", song_progression: @song_progression, song: @song, uid: uid %>
    <% end %>
<% end %>

<%= turbo_stream.remove "no-song-progressions" %>