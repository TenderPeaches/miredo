<%= turbo_stream.append "#{dom_id(@progression_template)}_chords" do %>
    <%# simulate the progression_template form, use a random unique integer as child_index because otherwise the new progression chords' fields get smushed with the existing progression chords %>
    <% ActionController::Base.helpers.fields model: @progression_template do |form| %>
        <% form.fields_for :progression_chords, @progression_chord, child_index: Time.now.to_i do |progression_chord_form| %>
            <%= tag.fieldset class: "progression-chord-form" do %>
                <%= tag.legend t('actions.new', thing: t('models.progression_chord.model_name')) %>
                <%= render "progression_chords/fields", form: progression_chord_form %>           
            <% end %>
        <% end %>
    <% end %>
<% end %>