<%# song options form %>
<%= form_tag song_path(song.id, format: :turbo_stream), class: "song-options", method: :get do %>
    <%# capo selection %>
    <%= tag.div class: "field" do %>
        <%= label_tag :capo, "Capo:" %>
        <%= song_capo_tag(@capo) %>
    <% end %>
    <%# key selection %>
    <%= tag.div class: "field" do %>
        <%= label_tag :key_shift, "Shift key (by this many semitones):" %>
        <%= number_field_tag :key_shift, @key_shift || 0, in: -6...7 %>
    <% end %>

    <%= submit_tag "Apply" %>
<% end %>