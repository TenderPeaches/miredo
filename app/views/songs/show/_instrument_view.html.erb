<%= tag.div id: "instruments", class: "instruments" do %>
    <%= form_tag instrument_views_path do %>
        <%= hint_label :instrument_view %>
        <%= select_tag :instrument, options_from_collection_for_select(Instrument.all, :id, :name) %>
        <%= hidden_field_tag :tuning, instrument_view.tuning.id.to_s, id: "instrument-view-tuning" %>
        <%= hidden_field_tag :fret_count, instrument_view.fret_count, id: "instrument-view-fret-count" %>
        <%= hidden_field_tag :pitch_ids, instrument_view.pitch_ids.to_s %>
        <%= hidden_field_tag :capo, instrument_view.capo, id: "instrument-view-capo" %>
        <%= submit_tag t('keywords.apply') %>
    <% end %>
    <%= tag.div id: "instrument-view", class: "instrument-view" do %>
        <%= instrument_print(instrument_view) %>
    <% end %>
<% end %>