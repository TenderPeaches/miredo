<%= tag.details class: "filters" do %>
    <%= tag.summary t('keywords.filter').pluralize %>
    <%= tag.p t('content.songs.filters'), class: "instruction" %>
    <%= form_with url: song_filters_path do |form| %>
        <%= filter_option :keyscale, form %>
        <%= filter_option :capo, form %>
        <%= filter_option :collection, form, Artist.model_name.human, "artist", { name: :artist, items: Artist.for_select, key: :id, label: :name } %>   
        <%= filter_option :boolean, form, t('keywords.favorites'), "favorite" %>
        <%= filter_option :boolean, form, t('content.songs.forgotten'), "forgotten" %>
        <%= filter_option :boolean, form, t('content.songs.hot'), "hot" %>
        <%= filter_option :boolean, form, t('content.songs.old_heart'), "old_heart" %>
        <%= form.submit t('keywords.apply') %>
    <% end %>
<% end %>