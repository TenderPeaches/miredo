<%= tag.nav do %>
    <%= song_edit_progression_templates_link(song.id) %>
    <%= song_edit_progressions_link(song.id) %>
<% end %>
<%= model_form_with model: song do |form| %>
    <%= render "songs/errors", song: song %>

    <%= tag.div class: "form-fields" do %>
        <%= render "songs/fields", form: form %>
        <%= tag.div class: "actions" do %>
            <%= form.submit "#{song.new_record? ? "Create" : "Update"} song" %>
        <% end %>        
    <% end %>
<% end %>