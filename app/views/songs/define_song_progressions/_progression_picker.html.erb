<%= tag.fieldset do %>
    <%= tag.legend t('actions.select', thing: t('models.progression.model_name')) %>
    <%= form_tag new_song_progression_form_path, class: "progression-picker" do %>
        <%= tag.div class: "field" do %>
            <%= label_tag t('models.progression.model_name') %>
            <%= select_tag :progression_id, options_from_collection_for_select(progressions, :id, :print_for_select, 1) %>
        <% end %>
        <%= hidden_field_tag :song_id, song.id %>
        <%= submit_tag t('actions.new', thing: t('models.song_progression.model_name')) %>
    <% end %>
<% end %>