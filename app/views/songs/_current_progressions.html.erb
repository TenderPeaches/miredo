<%= turbo_frame_tag "current-progressions" do %>
    <%= tag.div class: "card progressions--current" do %>
        <% if progressions.count > 0 %>
            <% progressions.each_with_index do |p, i| %>
                <%= render partial: "progressions/form", locals: { progression: p, progression_number: i + 1 } %>       
            <% end %>
        <% else %>
            <%= t('feedback.songs.no_progression') %>
        <% end %>
    <% end %>
<% end %>