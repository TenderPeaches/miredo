<%= tag.div id: "new-progressions", class: "card progressions--new" do %>
    <% progressions.each do |progression| %>
        <%= render partial: "progressions/form", locals: { progression: progression, song: song, key: key, scale: scale } %>
    <% end %>
<% end %>
<%= link_to t('actions.new', thing: t('models.progression.model_name')), song_new_progression_path(song.id.to_s), class: "button", data: { turbo_stream: true } %>