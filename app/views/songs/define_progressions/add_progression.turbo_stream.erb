<%= turbo_stream.append "new-progressions" do %>
    <%# use random unique identifier to easily pluck this element without needing to rely on the progression's DB ID, which is not assigned yet (as a new but unsaved progression) %>
    <% uid = Time.now.to_i %>
    <%= tag.fieldset id: "new-progression_#{uid}" do %>
        <%= tag.legend t('actions.new', thing: t('models.progression.model_name')) %>
        <%= render partial: "progressions/form", locals: { progression: @progression, uid: uid, song: @song } %>
    <% end %>
<% end %>
<%= turbo_stream.remove "no-progressions" %>