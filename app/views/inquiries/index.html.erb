<%= tag.section class: "contact-us" do %>
    <%= tag.h1 t('cta.contact_us') %>
    <%= form_tag inquiries_path id: "contact-form", class: "contact-form" do %>
        <%= tag.div class: "field" do %>
            <%= tag.label t('content.inquiries.return_address') %>
            <%= email_field_tag :email %>
        <% end %>
        <%= tag.div class: "field" do %>
            <%= tag.label t('content.inquiries.subject') %>
            <%= text_field_tag :subject %>
        <% end %>
        <%= tag.div class: "field" do %>
            <%= tag.label t('content.inquiries.body') %>
            <%= text_area_tag :body, nil, rows: 10 %>
        <% end %>
        <%= submit_tag t('keywords.send') %>
    <% end %>
<% end %>