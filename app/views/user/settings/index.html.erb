<%= model_form_with model: @user_settings, url: user_setting_path(@user) do |form| %>
    <%= render "user/settings/default_instrument", instruments: @instruments, form: form %>
    <%= render "user/settings/hot", form: form %>
    <%= render "user/settings/old_heart", form: form %>
    <%= tag.section class: "flashes", id: "flashes" %>
    <%= tag.div class: "actions" do %>
        <%= form.submit t('keywords.cancel'), name: :cancel %>
        <%= form.submit t('keywords.apply') %>
    <% end %>
<% end %>