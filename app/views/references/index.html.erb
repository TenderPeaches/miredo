<%= tag.h1 t('content.references.page_title') %>
<%= tag.section class: "ctas" do %>
    <%= tag.h2 t('content.references.internal') %>
    <%= cta_with_description t('content.references.chord_composition'), references_chords_path, t('hints.chord_composition') %>
    <%= cta_with_description t('content.references.key_scale'), references_chords_path, t('hints.key_scale') %>
    <%= cta_with_description t('content.references.progression_templates'), references_chords_path, t('hints.progression_templates') %>
