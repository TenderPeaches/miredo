<%= tag.div class: "fretboard" do %>
    <%# helper fret indicators (either note or number) %>
    <%= render "instruments/fretted/header", fret_count: instrument_view.fret_count, capo: instrument_view.capo %>
    <%# the calling view must render the strings (as TuningPitches) %>
    <%= yield %>
    <%# helper fret indicators %>
    <%= render "instruments/fretted/fret_indicators", fret_count: instrument_view.fret_count, capo: instrument_view.capo %>
<% end %>