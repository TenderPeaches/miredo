<%= tag.header do %>
    <%= tag.h2 "Miredo" %>
    <%= tag.nav do %>
        <%= yield :header %>
        <%= link_to "Songs", root_path %>
        <% if user_signed_in? %>
            <%= link_to t('cta.log_out'), destroy_user_session_path, data: { turbo_method: :delete } %>
        <% else %>
            <%= link_to t('cta.log_in'), new_user_session_path %>
            <%= link_to t('cta.sign_up'), new_user_registration_path %>
        <% end %>
    <% end %>
<% end %>