<!DOCTYPE html>
<%= tag.html do %>
  <%= render "layouts/head" %>
  <%#todo warning that learning how to use the app is easier on a PC/large screen %>
  <%= tag.body do %>
    <%= render "layouts/header" %>
    <%= tag.main class: "content" do %>
      <%= tag.section class: "flashes" do %>
        <%= render "layouts/flashes", flash: flash %>
      <% end %>      
      <%= yield %>
    <% end %>
    <%= render "layouts/footer" %>
  <% end %>
<% end %>
