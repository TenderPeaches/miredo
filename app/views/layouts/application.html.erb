<!DOCTYPE html>
<html>
  <head>
    <title>Miredo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= yield :head %>
  </head>

  <body>
    <%= render "layouts/header" %>
    <%= tag.div class: "content" do %>
      <%= tag.div class: "flashes" do %>
        <%= tag.div class: "notice" do %><%= notice %><% end %>
        <%= tag.div class: "alert" do %><%= alert %><% end %>
      <% end %>
      <%= yield %>
    <% end %>
  </body>
</html>
