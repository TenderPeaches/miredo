<%= tag.div id: "current-progressions", class: "card current-progressions" do %>
    <% if progressions.count > 0 %>
        <% progressions.each_with_index do |progression, i| %>
            <%= tag.fieldset id: dom_id(progression) do %>
                <%= tag.legend "#{(i + 1).to_s}) #{progression.tag}" %>
                <%= render "progressions/form", progression: progression %>    
            <% end %>   
        <% end %>
    <% else %>
        <%= tag.div t('feedback.songs.no_progression'), id: "no-progressions" %>
    <% end %>
<% end %>