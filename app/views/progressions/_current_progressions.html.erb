<%= tag.div id: "current-song-progressions", class: "current-progressions" do %>
    <% if progressions.count > 0 %>
        <% progressions.each_with_index do |progression, i| %>
            <%= tag.fieldset id: dom_id(progression), class: "progression" do %>
                <%= tag.legend "#{(i + 1).to_s}) #{progression.tag}" %>
                <%= render "progressions/form", progression: progression, song: song %>    
            <% end %>
        <% end %>
    <% else %>
        <%= tag.div t('content.songs.no_progression'), id: "no-songprogression-templates" %>
    <% end %>
<% end %>