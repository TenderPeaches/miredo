<%= tag.div id: "new-progressions", class: "card new-progressions" do %>
    <% progressions.each do |progression| %>
        <%= render "progressions/form", progression: progression, song: song, key: key, scale: scale %>
    <% end %>
<% end %>

<%# helper for transcribing from the old method, showing the chords & reps that need to be turned into progressions %>
<%= tag.div do %>
    <% unless song.chords.empty? %>
        <%= song.chords %>
    <% end %>
    <% unless song.lyrics.empty? %>
        <%= song.lyrics %>
    <% end %>
<% end %>

<%= link_to t('actions.new', thing: t('models.progression.model_name')), new_song_progression_path(song.id.to_s), class: "button", data: { turbo_stream: true } %>