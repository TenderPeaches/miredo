<%# remove the progression from the list of pending progressions %>
<%= turbo_stream.remove "new-progression_#{@progression.uid}" %>

<%# append the progression to the list of current progressions %>
<%= turbo_stream.append "current-progressions" do %>
    <%= tag.fieldset id: dom_id(@progression) do %>
        <%= tag.legend "#{@progression_index.to_s}) #{@progression.tag}" %>
        <%= render "progressions/form", progression: @progression %>    
    <% end %>   
<% end %>